@{
    ViewData["Title"] = "ForGotPassword";
    Layout = "~/Views/Shared/_LayoutLogins.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Quên mật khẩu ?</title>
    <link href="~/Theme/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/Theme/Admin/css/sb-Admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Bạn quên mật khẩu ?</h1>
                                        <p class="mb-4">Hãy nhập mã bảo vệ đã nhận được trong email của bạn để đặt lại mật khẩu!</p>
                                    </div>
                                    <form class="user" id="tokenForm">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="InputGuid" aria-describedby="emailHelp" placeholder="Mã bảo vệ...">
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Xác nhận</button>
                                    </form>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('tokenForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const url = '/api/Accounts/CheckToken';
            const tokenValue = document.getElementById('InputGuid').value.trim();

            if (tokenValue === '') {
                alert("Vui lòng nhập mã bảo vệ.");
                return;
            }

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ ValueToken: tokenValue }),
            })
                .then(response => response.json().then(data => ({ status: response.status, body: data })))
                .then(result => {
                    if (result.status === 200) {
                        const { message } = result.body; // message now contains the IDAccount
                        console.log('code: ', message); // For debugging
                        window.location.href = `/Account/ResetPassword?CodeAccount=${encodeURIComponent(message)}`;
                    } else {
                        alert("Mã bảo vệ không hợp lệ. Vui lòng thử lại.");
                    }
                })
                .catch(error => {
                    console.error('Lỗi:', error);
                    if (error.message.includes("Token has expired")) {
                        alert("Mã bảo vệ đã hết hạn. Vui lòng thử lại.");
                    } else if (error.message.includes("Invalid or expired token")) {
                        alert("Mã bảo vệ không hợp lệ. Vui lòng thử lại.");
                    } else {
                        alert("Đã xảy ra lỗi khi thực hiện yêu cầu. Vui lòng thử lại sau.");
                    }
                });
        });

    </script>

    <script src="~/Theme/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Theme/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Theme/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Theme/Admin/js/sb-Admin-2.min.js"></script>
</body>
</html>
