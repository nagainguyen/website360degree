<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY&callback=initMap" async defer></script>
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #e1e8f2;
        }

        header {
            background-color: #e1e8f2;
            padding: 15px 0;
            box-shadow: 0 4px 2px -2px gray;
        }

        .navbar-brand img {
            max-height: 70px;
        }

        .navbar {
            background-color: #e1e8f2;
        }

        .navbar-nav .nav-link {
            padding: 1rem 1.5rem;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
            background-color: #79a2d9;
            color: #000;
        }

            .navbar-nav .nav-link:hover {
                background-color: #f8d7da;
                color: #000;
            }

        .link-login-account a,
        .nav-item.dropdown.logined-account a {
            color: #000;
        }

            .link-login-account a:hover {
                background-color: #ad4558;
            }

        .footer {
            padding: 1rem 0;
            background-color: #e1e8f2;
        }

        .contact-section,
        .address-section {
            margin-top: 30px;
        }

        .social-logo {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

            .social-logo img {
                max-height: 40px;
                margin-right: 10px;
            }
    </style>

    <style>
        .contact-section {
            background-color: #bbd8f2;
            padding: 20px;
            margin-top: 30px;
            text-align: center;
        }

        .contact-title {
            font-family: 'Courier New', Courier, monospace;
            font-size: 20px;
            font-weight: bold;
            color: blue;
            margin-bottom: 20px;
        }

        .social-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
        }

            .social-logo img {
                max-height: 36px;
                margin-right: 10px;
            }

        .phone-logo-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 10px;
        }

        .phone-logo img {
            max-height: 73px;
            margin-right: 10px;
        }

        #phone-number {
            display: none;
            font-family: Courier;
            font-size: 18px;
            font-weight: bold;
        }
    </style>

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Image/logo.png" alt="Logo">
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ml-auto flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item link-login-account">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logins">Logins</a>
                        </li>
                        <li class="nav-item link-logout-account">
                            <a class="nav-link text-dark" onclick="logout()">Log Out</a>
                        </li>
                        <li class="nav-item dropdown logined-account">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="optionsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage
                            </a>
                            <div class="dropdown-menu" aria-labelledby="optionsDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Options_Scenes">Manage Scenes</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Options_HotSpots">Manage HotSpots</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Options_AllManage">All Manage</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <section>
                @RenderBody()
            </section>
        </main>
    </div>
    <footer class="border-top footer text-muted">
        
        <section class="contact-section">
            <p class="contact-title">
                Contact Us
            </p>
            <div class="social-logo">
                <a href="https://www.facebook.com/" target="_blank" class="fb-logo">
                    <img src="https://cdn3.iconfinder.com/data/icons/glypho-social-and-other-logos/64/logo-facebook-1024.png" alt="Facebook Logo" style="max-height: 60px">
                </a>         
                    <div class="phone-logo" onmouseover="showPhoneNumber()" onmouseout="hidePhoneNumber()">
                        <img src="https://brandlogos.net/wp-content/uploads/2021/11/zalo-logo.png" alt="Phone Logo">
                    </div>
                    <span id="phone-number">0123456789</span>
            </div>
        </section>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function showPhoneNumber() {
            var phoneNumber = document.getElementById('phone-number');
            phoneNumber.style.display = 'inline'; 
        }

        function hidePhoneNumber() {
            var phoneNumber = document.getElementById('phone-number');
            phoneNumber.style.display = 'none';  
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
